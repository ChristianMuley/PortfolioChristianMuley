                <div class="hero-a-bg" aria-hidden="true">
                    <img class="hero-a-img" src="img/Panel1BG.png" alt="" />
                </div>
                <div class="absolute inset-0 bg-gradient-to-b from-black/30 via-black/20 to-black/55"></div>
            </div>

            <div class="relative z-10 h-full w-full flex items-center justify-center px-6">
                <div class="w-full max-w-3xl rounded-[28px] border border-white/10 bg-white/5 backdrop-blur-xl shadow-[0_24px_90px_rgba(0,0,0,0.55)] p-14 text-center">
